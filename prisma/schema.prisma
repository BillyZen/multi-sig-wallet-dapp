generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id String @id @default(uuid())
  title String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  list Item[]
}

model Item {
  id String @id @default(uuid())
  name String @unique
  Collection Collection? @relation(fields: [collectionId], references: [id])
  collectionId String?
}

